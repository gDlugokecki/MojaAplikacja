@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Moja Aplikacja</h1>
</div>

<div class="row">
    
        @if (!Request.IsAuthenticated)
        {
            <p>@Html.ActionLink("Log in", "LogIn", "UserController", new { @class = "btn btn-default" })</p>
            <p>@Html.ActionLink("Rejestracja", "Registration", "UserController", new { @class = "btn btn-default" })</p>
        }
        else
        {
            <p>@Html.ActionLink("Show Profile", "ShowProfile", "UserController", new { @class = "btn btn-default" })</p>
            <p>@Html.ActionLink("Forum", "Forum", "UserController", new { @class = "btn btn-default" })</p>
            <p>@Html.ActionLink("Log Out", "LogOut", "UserController", new { @class = "btn btn-default" })</p>
        }
</div>